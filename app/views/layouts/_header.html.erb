<header class="header container">
  <ul class="language_switcher">
    <% I18n.available_locales.each do |locale| %>
      <% locale_name = t('.locale_name', locale: locale, default: locale.to_s) %>
      <li>
        <% if I18n.locale == locale %>
          <%= content_tag :span, locale_name, class: 'choose_language', title: t('.currently_chosen', default: 'Currently chosen') %>
        <% else %>
          <%= link_to(locale_name, {locale: locale}, class: 'choose_language', title: locale_name) %>
        <% end %>
      </li>
    <% end %>
  </ul>

  <%= link_to(image_tag("dmp_logo.png", :alt => t('.dmptool_logo_alt'), :width => "146", :height => "25"), root_path, :class => "logo", :title => t('.dmptool_logo_title')) %>
  <div class="welcome">
    <p><%= t('.welcome') unless current_user.nil? %>
      <%= content_tag(:strong, "#{current_user.full_name}") unless current_user.nil? %></p>
  </div>
  <nav class="navbar">
    <ul class="nav">
      <li class="nav-home<%= (menu_level(0) == 'home' ? ' current' : '') %>"><%= link_to t('.home_link'), root_path, :title => t('.home_title') %></li>
      <% if current_user %>
        <li class="nav-dashboard"><%= link_to t('.myDashboard_link'), dashboard_path, :title => t('.myDashboard_title') %></li>
      <% end %>
      <li class="nav-guidance<%= (menu_level(0) == 'dmp_requirements' ? ' current' : '') %>"><%= link_to t('.dmpRequirements_link'), guidance_path, :title => t('.dmpRequirements_title') %></li>
      <li class="nav-public<%= (menu_level(0) == 'public_dmps' ? ' current' : '') %>">
        <%= link_to t('.publicDMPs_link'), public_dmps_path, :title => t('.publicDMPs_title') %>
      </li>
      <li class="nav-new"><%= link_to t('.news_link'), APP_CONFIG['blog'], :title => t('.news_title'), :target => "_blank" %></li>
      <li class="nav-help<%= (menu_level(0) == 'help' ? ' current' : '') %>"><%= link_to t('.help_link'), help_path, :title => t('.help_title') %></li>
      <li class="nav-contact<%= (menu_level(0) == 'contact' ? ' current' : '') %>"><%= link_to t('.contact_link'), contact_path, :title => t('.contact_title') %></li>
      <li class="nav-about parent<%= (menu_level(0) == 'about' ? ' current' : '') %>"><%= link_to t('.about_link'), about_path, :title => t('.about_title') %>
      	<ul class="children right">
      		<li><%= link_to t('.faq_link'), t('.faq_url'), :title => t('.faq_title'), :target => "_blank" %></li>
      		<li><%= link_to t('.video_link'), video_path, :title => t('.video_title') %></li>
      		<li><%= link_to t('.partnerInstitutions_link'), partners_path, :title => t('.partnerInstitutions_title') %></li>
      	</ul>
      </li>
      <li class="login<%= (menu_level(0) == 'log_in' ? ' current' : '') %>">
        <%= link_to(content_tag(:span, "", :class => "icon user-login") + t('.logIn'), choose_institution_path) if !current_user %>
        <%= link_to(content_tag(:span, "", :class => "icon user-login") + t('.logOut'), logout_path) if current_user %></li>
    </ul>
  </nav>
</header>
