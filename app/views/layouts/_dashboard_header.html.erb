<div class="dashboard row">
  <%= render partial: 'layouts/dashboard_logo_row' %>
  <div class="dashboard-nav row-fluid" id="quick_dashboard">
    <ul class="nav">

      <!-- My Dashboard -->
      <li <%= "class=current" if menu_level(0) == 'dashboard' %>>
        <%= link_to_dashboard {|text| content_tag :span, text} %>
      </li>

      <!-- My DMPs -->
      <li <%= "class=current" if menu_level(0) == 'my_dmps' %>>
        <%= link_to_plans {|text| content_tag :span, text} %>
      </li>

      <!-- Create New DMP -->
      <%= content_tag :li, class: ('current' if menu_level(0) == 'plans') do %>
        <%= link_to_plan_template_information {|text| content_tag :span, text} %>
      <% end %>

      <!-- Review DMPs -->
      <% if user_role_in?(:institutional_reviewer, :dmp_admin) %>
        <li <%= "class=current" if menu_level(0) == 'review_dmp' %>>
          <%= link_to_review_dmps {|text| content_tag :span, text} %>
        </li>
      <% end %>

      <!-- DMP Templates -->
      <%= content_tag :li, class: ('current' if menu_level(0) == 'dmp_templates') do %>
        <%= link_to_requirements_templates {|text| content_tag :span, text} %>
      <% end %>

      <!-- Customizations -->
      <%= content_tag :li, class: ('current' if menu_level(0) == 'customizations') do %>
        <%= link_to_resource_contexts {|text| content_tag :span, text} %>
      <% end %>

      <!-- Institution Profile -->
      <% if user_role_in?(:institutional_admin, :dmp_admin) %>
        <li <%= 'class=current' if menu_level(0) == 'institution' %> >
          <%= link_to_institutions {|text| content_tag :span, text} %>
        </li>
      <% end %>

      <!-- My Profile -->
      <li <%= 'class=current' if menu_level(0) == 'my_profile' %>>
        <%= link_to_edit_user(current_user) {|text| content_tag :span, text} %>
      </li>

      <!-- DMP Administration -->
      <% if user_role_in?(:dmp_admin) %>
        <li <%= 'class=current' if menu_level(0) == 'dmp_admin' %>>
          <%= link_to_users {|text| content_tag :span, text} %>
        </li>
      <% end %>

    </ul>
  </div>

<!--
  Create New DMP
-->
  <% if menu_level(0) == 'plans' && !menu_level(1).blank? %>
    <%= render partial: 'layouts/dashboard_create_dmp_submenu' %>
  <% end %>
<!--
  DMP Templates
-->
  <% if user_role_in?(:dmp_admin, :institutional_admin, :template_editor, :resource_editor) %>
    <% if (user_role_in?(:institutional_admin, :template_editor, :resource_editor) &&
           !user_role_in?(:dmp_admin)) && menu_level(0) == 'customizations' %>
      <%= render partial: 'layouts/dashboard_customizations_under_dmp_submenu' %>
    <% elsif menu_level(0) == 'dmp_templates' && menu_level(1).present? %>
      <%= render partial: 'layouts/dashboard_requirements_template_submenu' %>
    <% end %>
  <% end %>
<!--
  Customizations
-->
  <% if user_role_in?(:dmp_admin) %>
    <% if menu_level(0) == 'customizations' && !menu_level(1).blank? %>
      <%= render partial: 'layouts/dashboard_customizations_submenu' %>
    <% end %>
  <% end %>
</div>