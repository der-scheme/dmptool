<div class="help_box_head">
  <div style="float:right">
    <%= content_tag :strong, t('.box_size') %>
    <%= link_to t('.box_size_small'), '#', onclick: "fixed_size('example_response_box', '60');return false;" %>
    |
    <%= link_to t('.box_size_medium'), '#', onclick: "fixed_size('example_response_box','140');return false;" %>
    |
    <%= link_to t('.box_size_full'), '#', onclick: "full_size('example_response_box');return false;" %>
  </div>
  <%= content_tag :strong, t('.guidance') %>
</div>
<div class="help_box" id="example_response_box">
  <div class= 'global_resources'>
  	<% unless @requirement.global_resources.example_response.empty? %>
    <ul>
      <%# global resources for this requirement, Stephen's case #1 %>
      <% (@requirement.global_resources.example_response).each do |resource| %>
      <li>
        <p class="cust_text">
          <%= sanitize(resource.text) %>
        </p>
      </li>
      <% end %>
    </ul>
    <% end %>
  </div>

  <div class= 'template_resources'>
    <% unless @requirement.template_resources.example_response.empty? %>
    <ul>
      <%# template resources for this requirement, Stephen's case #2 %>
      <% (@requirement.template_resources.example_response).each do |resource| %>
      <li>
        <p class="cust_text">
          <%= sanitize(resource.text) %>
        </p>
      </li>
      <% end %>
    </ul>
    <% end %>
  </div>

  <div class= 'requirement_resources'>
    <% unless @requirement.requirement_resources.example_response.empty? %>
    <ul>
      <%# requirement resources for this requirement, Stephen's case #3 %>
      <% (@requirement.requirement_resources.example_response).each do |resource| %>
      <li>
        <p class="cust_text">
          <%= sanitize(resource.text) %>
        </p>
      </li>
      <% end %>
    </ul>
    <% end %>
  </div>

  <div class= 'institution_customization_resources'>
    <% unless @requirement.institution_customization_resources(current_user.institution_id).example_response.empty? %>
    <%= content_tag :h3, t('.institution_customization_resources', institution: current_user.institution.name) %>
    <ul>
      <%# institution customization resources for this requirement, Stephen's case #4 %>
      <% (@requirement.institution_customization_resources(current_user.institution_id).example_response).each do |resource| %>
      <li>
        <p class="cust_text">
          <%= sanitize(resource.text) %>
        </p>
      </li>
      <% end %>
    </ul>
    <% end %>
  </div>

