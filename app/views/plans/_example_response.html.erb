    <% unless @requirement.template_customization_resources(current_user.institution_id).example_response.empty? %>
    <%= content_tag :h3, t('.template_customization_resources', template: @requirements_template.name, institution: current_user.institution.name) %>
    <ul>
      <%# template customization resources for this requirement, Stephen's case #5 %>
      <% (@requirement.template_customization_resources(current_user.institution_id).example_response).each do |resource| %>
      <li>
        <p class="cust_text">
          <%= sanitize(resource.text) %>
