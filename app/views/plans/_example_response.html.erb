    <% end %>
  </div>

  <div class= 'requirement_customization_resources'>
    <%# requirement customization resources for this requirement, Stephen's case #7 %>
  	<ul>
  		<% @example_resources.each do |resource| %>
      <li>
        <p class="cust_text">
          <%= sanitize(resource.text) %>
        </p>
      </li>
  		<% end %>
  	</ul>
  </div>
