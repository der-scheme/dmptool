<% @title_text = t('.title') %>
<% @display_menu = "plans:preview" %>

<%= i18n_include_tag %>
<%= i18n_include_tag 'shared.button_button', 'shared.submit_button' %>
<h1 class="row-fluid"><span class="icon template-preview"></span><%= @title_text %></h1>
<br/>
<div class="row-fluid">
	<%= render_button_link t('.pdf_button'), plan_path(@plan, format: :pdf), class: 'pull-left' %>
	<%= render_button_link t('.docx_button'), plan_path(@plan, format: :docx), class: 'pull-left' %>
        <%= render_button_link content_tag(:span, '', class: 'icon print') + t('.print_button'),
			       href: @plan, class: 'pull-left' %>
</div>
<br/>

<div class="border-box">
  <%= render :partial => 'html_render', locals: {plan: @plan} %>
</div>

<div class="buttons">
  <%= content_tag :p, t('.plan_visibility_html',
		  visibility: t_enum(@plan, :visibility)), class: 'pull-left' %>
  <%= link_to t('.change_visibility_button'), '#', class: 'btn change_visibility_link', data: {planid: @plan.id, visibility: @plan.visibility} %>
  <%= t('plans.form.visibility_note_html') %>
</div>

<div class="row-fluid">
  <%= render_back_button href: details_plan_path(@plan), arrow: true, green: true, class: 'pull-left' %>
  <%= render 'back_submit_buttons' %>
</div>

<div id = 'visibility_dialog_form'>
	<%= render partial: 'change_visibility', locals: {:plan_id => @plan.id, :visibility => @plan.visibility} %>
</div>

<script type="text/javascript">
	tab_jump();
	add_tab_to_pagination();
</script>


