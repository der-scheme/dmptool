<%#= form_tag(change_visibility_path, id: "visibility_form", method: :post, html: { :class => "form-horizontal"}) do %>
<%= form_tag(change_visibility_path, id: "visibility_form", method: :post) do %>

  <%= hidden_field_tag(:plan_id, plan_id, id: 'shared_plan_id') %>
  <%#= hidden_field_tag(:visibility, visibility, id: 'shared_visibility') %>
  <div class="control-group">
    <div class="controls checkbox-controls">
      <%= radio_button_tag :visibility, :institutional  %>
      <%= label_tag :visibility_institutional,
                    t('.visibility_institutional', institution: current_user.institution.full_name),
                    class: 'radio-label' %><br/>

      <%= radio_button_tag :visibility, :public%>
      <%= label_tag :visibility_public, t('.visibility_public'), class: 'radio-label' %><br/>

      <%= radio_button_tag :visibility, :private %>
      <%= label_tag :visibility_private, t('.visibility_private'), class: 'radio-label' %><br/>

      <%if current_user.institution.has_children? || current_user.institution.parent %>
        <%= radio_button_tag :visibility, :unit %>
        <%= label_tag :visibility_unit, t('.visibility_unit'), class: 'radio-label' %>
      <%end%>
    </div>
  </div>
  <br/>

<% end %>
