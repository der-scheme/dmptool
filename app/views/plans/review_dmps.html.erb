<% @title_text = t('.title') %>
<% @display_menu = "review_dmp" %>

<%= i18n_include_tag %>
<%= i18n_include_tag 'shared.button', 'shared.submit_button' %>
<h1 class="row-fluid"><span class="icon review"></span><%= @title_text %></h1>
<div class="table-scope">
<%= link_to t('.filter_all_link',       count: @all),       {scope: 'all_limited', order_scope: @order_scope, all_scope: @all_scope}, class: 'all_limited' %>
|
<%= link_to t('.filter_submitted_link', count: @submitted), {scope: 'submitted',   order_scope: @order_scope, all_scope: @all_scope}, class: 'submitted' %>
|
<%= link_to t('.filter_approved_link',  count: @approved),  {scope: 'approved',    order_scope: @order_scope, all_scope: @all_scope}, class: 'approved' %>
|
<%= link_to t('.filter_rejected_link',  count: @rejected),  {scope: 'rejected',    order_scope: @order_scope, all_scope: @all_scope}, class: 'rejected' %>
|
<%= link_to t('.filter_reviewed_link',  count: @reviewed),  {scope: 'reviewed',    order_scope: @order_scope, all_scope: @all_scope}, class: 'reviewed' %>
</div>
<table class="table table-striped" id="review_dmps">
  <thead>
    <tr>
      <th><%= sortable :name %></th>
      <th><%= sortable :owner %></th>
      <th>
        <%= sortable :updated_at, t('.submission_date') %>
        <%= content_tag :span, '', title: t('.submission_date_tooltip'),
                        data: {toggle: 'tooltip', placement: 'right', html: 'true'},
                        class: 'icon questionmark tip' %>
      </th>
      <th class="span1"><%= sortable :current_plan_state_id %></th>
      <%= content_tag :th, t('.review_plan'), class: 'span1' %>
    </tr>
  </thead>
  <tbody>
    <% @plans.each do |plan| %>
      <tr>
				<%= content_tag :td, class: 'span7', id: plan.id do %>
          <strong><%= plan.name %></strong>
        <% end %>
        <td><%= owner_name(plan) %></td>
        <td><%= l(plan.updated_at) %></td>
        <td class="span1"><strong><%= translated_state(plan) %></strong></td>
        <td class="span1">
        	<div class="actions">
	        	<%= link_to "", perform_review_plan_path(plan), :class => "icon approve-template" %>
	        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @all_scope == "all" %>
<div class="buttons pagination">
  <%= render_button_link t: '.view_less',
                         href: review_dmps_path(all_scope: 'less', order_scope: @order_scope, scope: @scope) %>
  <%= paginate @plans %>
</div>
<% else %>
  <div class="buttons pagination">
    <%= render_button_link t: '.view_all',
                           href: review_dmps_path(all_scope: 'all', order_scope: @order_scope, scope: @scope) %>
    <%= paginate @plans %>
  </div>
<%end%>

</tr>

</table>