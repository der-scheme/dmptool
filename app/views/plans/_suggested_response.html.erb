<div class="help_box_head">
  <div style="float:right"><%= content_tag :strong, t('.box_size') %>
    <a href="#" onclick="fixed_size('suggested_response_box', '60');return false;"><%= t('.box_size_small') %></a>
    | <a href="#" onclick="fixed_size('suggested_response_box','140');return false;"><%= t('.box_size_medium') %></a>
    | <a href="#" onclick="full_size('suggested_response_box');return false;"><%= t('.box_size_full') %></a></div>
  <%= content_tag :strong, t('.guidance') %>
</div>
<div class="help_box" id="suggested_response_box">
  <div class= 'global_resources'>
    <% unless @requirement.global_resources.suggested_response.empty? %>
    <ul>
      <%# global resources for this requirement, Stephen's case #1 %>
      <% (@requirement.global_resources.suggested_response).each do |resource| %>
        <li>
          <p class="cust_text">
            <%= sanitize(resource.text) %>
          </p>
        </li>
      <% end %>
    </ul>
   <% end %>
  </div>

  <div class= 'template_resources'>
    <% unless @requirement.template_resources.suggested_response.empty? %>
    <ul>
      <%# template resources for this requirement, Stephen's case #2 %>
      <% (@requirement.template_resources.suggested_response).each do |resource| %>
        <li>
          <p class="cust_text">
            <%= sanitize(resource.text) %>
          </p>
        </li>
      <% end %>
    </ul>
   	<% end %>
  </div>

  <div class= 'requirement_resources'>
    <% unless @requirement.requirement_resources.suggested_response.empty? %>
    <ul>
      <%# requirement resources for this requirement, Stephen's case #3 %>
      <% (@requirement.requirement_resources.suggested_response).each do |resource| %>
        <li>
          <p class="cust_text">
            <%= sanitize(resource.text) %>
          </p>
        </li>
      <% end %>
    </ul>
    <% end %>
  </div>

  <div class= 'institution_customization_resources'>
    <% unless @requirement.institution_customization_resources(current_user.institution_id).suggested_response.empty? %>
    <%= content_tag :h3, t('.institution_customization_resources', institution: current_user.institution.name) %>
    <ul>
      <%# institution customization resources for this requirement, Stephen's case #4 %>
      <% (@requirement.institution_customization_resources(current_user.institution_id).suggested_response).each do |resource| %>
        <li>
          <p class="cust_text">
            <%= sanitize(resource.text) %>
          </p>
        </li>
      <% end %>
    </ul>
    <% end %>
  </div>

  <div class= 'template_customization_resources'>
    <% unless @requirement.template_customization_resources(current_user.institution_id).suggested_response.empty? %>
    <%= content_tag :h3, t('.template_customization_resources',
                           template: @requirements_template.name,
                           institution: current_user.institution.name) %>
    <ul>
      <%# template customization resources for this requirement, Stephen's case #5 %>
      <% (@requirement.template_customization_resources(current_user.institution_id).suggested_response).each do |resource| %>
        <li>
          <p class="cust_text">
            <%= sanitize(resource.text) %>
          </p>
        </li>
      <% end %>
    </ul>
    <% end %>
  </div>

  <div class= 'requirement_customization_resources'>
    <%# requirement customization resources for this requirement, Stephen's case #7 %>
  	<ul>
  		<% @suggested_resources.each do |resource| %>
        <li>
          <p class="cust_text">
            <%= sanitize(resource.text) %>
          </p>
        </li>
  		<% end %>
  	</ul>
  </div>
</div>