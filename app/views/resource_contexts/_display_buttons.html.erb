<% if @resource_context.new_record? %>
  <%= render_button_link t('.choose_template_button'),
                         requirements_templates_path,
                         class: 'pull-left' %>
<% else %>
  <% if user_role_in?(:dmp_admin) %>
    <%= render_button_link t('.customizations_button'),
                           resource_contexts_path,
                           class: 'pull-left' %>
  <% end %>

  <%= render_button_link t('.details_button'),
                         customization_requirement_path(@resource_context),
                         class: 'pull-right', id: 'next_btn', green: true %>
<% end %>
