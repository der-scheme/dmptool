<% provide(:title, t('.title')) %>
<%= i18n_include_tag %>

<%= form_for @current_institution, html: { class: 'form-horizontal', multipart: true}  do |f| %>
  <%= render partial: 'shared/model_errors', locals: { model: @current_institution } %>
  <div class="control-group">
    <%= f.label :full_name, class: 'control-label required' %>
    <div class="controls">
	    <%= f.text_field :full_name, class: 'input-xxlarge', 'aria-required' => 'true' %>
	  </div>
  </div>

  <div class="control-group">
    <%= f.label :shib_entity_id, class: 'control-label' %>
    <div class="controls">

      <%= f.text_field :shib_entity_id, readonly: @current_institution.is_shibboleth?, disabled: @disabled %>
      <%= content_tag(:span, '', title: t('.shib_entity_id_tooltip'), data: { toggle: 'tooltip', placement: 'right', html: 'true'}, class: 'icon questionmark tip') %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :shib_domain , "Shibboleth Domain", :class => "control-label "%>
    <div class="controls">

      <%= f.text_field :shib_domain, readonly: @current_institution.is_shibboleth? , disabled: @disabled %>
      <%= content_tag(:span, '', title: t('.shib_domain_id_tooltip'), data: { toggle: 'tooltip', placement: 'right', html: 'true' }, class: 'icon questionmark tip') %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :parent_id, class: 'control-label' %>
    <div class="controls">

      <% if user_role_in?(:dmp_admin) %>
        <%= f.select :parent_id,
              @categories,
              { selected:  @current_institution.parent_id, :include_blank => 'none'},
              {:disabled => true}
        %>
      <% else %>

        <%= f.select :parent_id,
            @sub_institutions,
            #@institution_pool,
            #{:disabled => (!@current_institution.is_shibboleth? || !user_role_in?(:institutional_admin))}
            { selected:  @current_institution.parent_id, :include_blank => 'none'},
            {:disabled => true}
        %>

      <% end %>

      <%= content_tag(:span, '', title: t('.parent_tooltip'), data: { toggle: 'tooltip', placement: 'right', html: 'true' }, class: 'icon questionmark tip') %>

    </div>
  </div>

  <div class="control-group">
    <%= f.label :nickname, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :nickname %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :url, class: 'control-label' %>
    <%= f.label :url_text, class: 'hide' %>
    <div class="controls">
      <%= f.text_field :url_text, placeholder: t('.url_text_placeholder') %>
      <%= f.text_field :url, placeholder: t('.url_placeholder') %>
      <%= content_tag(:span, '', title: t('.url_tooltip'), data: { toggle: 'tooltip', placement: 'right', html: 'true' }, class: 'icon questionmark tip') %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :contact_info, class: 'control-label' %>
    <%= f.label :contact_email, class: 'hide' %>
    <div class="controls">
      <%= f.text_field :contact_info, placeholder: t('.contact_info_placeholder') %>
      <%= f.text_field :contact_email, placeholder: t('.contact_email_placeholder') %>
      <%= content_tag(:span, '', title: t('.contact_tooltip'), data: { toggle: 'tooltip', placement: 'right', html: 'true' }, class: 'icon questionmark tip') %>
    </div>
  </div>

  <div class="control-group">

    <%= f.label :logo, class: 'control-label'  %>

    <div class="controls">
      <%= image_tag @current_institution.logo.url if @current_institution.logo? %>
      <%= f.file_field :logo, :onchange =>"validateFiles(this);" %>
      <%= f.hidden_field :logo_cache %>
      <%= content_tag(:span, '', title: t('.logo_tooltip'), data: { toggle: 'tooltip', placement: 'right', html: 'true' }, class: 'icon questionmark tip') %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit t('.upload_button'), class: 'btn' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :desc, class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :desc, rows: 5, class: 'input-xxlarge' %>
    </div>
  </div>
	
	<h4>Request for Feedback - Automated Email:</h4>
	<div class="control-group">
		<%= f.label :submission_mailer_subject, "Subject", class: "control-label" %>
		<%= f.text_field :submission_mailer_subject, placeholder: "#{APP_CONFIG['mailer_submission_default']['subject']}", class: "input-xxlarge" %>
	</div>
	<div class="control-group">
		<%= f.label :submission_mailer_body, "Message", class: "control-label" %>
		<%= f.text_area :submission_mailer_body, rows: 10, :class => "input-xxlarge", placeholder: "#{APP_CONFIG['mailer_submission_default']['body']}" %>
		<%= content_tag(:span, '', title: 'The automated email message that users receive when they submit a plan for feedback.', 'data-toggle' => 'tooltip', 'data-placement' => 'right', 'data-html' => true, class: 'icon questionmark tip') %>
	</div>
	
  <div class="buttons">
    <%= render_save_changes_button %>
    <%= render_cancel_button %>
  </div>
	
	<script>
		$.ready(function(){
console.log('Current: ' + $("#submission_mailer_body").placeholder);
console.log('Current: ' + $("#submission_mailer_body").placeholder.replace(/\\n/g, '\n'));

			$("#submission_mailer_body").placeholder.replace(/\\n/g, '\n');
		});
	</script>
<% end %>
