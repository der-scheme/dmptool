<% @title_text = t('.title') %>
<% @display_menu = "dmp_admin" %>
<h1 class="row-fluid"><span class="icon administrator"></span><%= @title_text %></h1>
<div class="tabbable">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#tab1" data-toggle="tab"><%= User.model_name.human(count: 0, unit: false) %></a></li>
    <li><a href="#tab2" data-toggle="tab"><%= Institution.model_name.human(count: 0, unit: false) %></a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab1">
      <%= render 'user_search' %>
			<%= render 'users_list' %>
    </div>
    <div class="tab-pane" id="tab2">
      <%= render 'institutions_list' %>
    </div>
  </div>
</div>
<script type="text/javascript">
	tab_jump();
	add_tab_to_pagination();
</script>