<table class="table table-striped">
	<thead>
	  <tr>
			<%= content_tag :th, Institution.human_attribute_name(:name) %>
			<%= content_tag :th, Institution.human_attribute_name(:contact_info) %>
			<%= content_tag :th, Institution.human_attribute_name(:parent_id) %>
	  </tr>
  <thead>
  <tbody>
  <% @institutions.each do |institution| %>
    <tr class='user_row'>
      <td><%= link_to institution.full_name, edit_institution_path(institution, admin_acr: "tab_tab2") %></td>
			<td>
				<%= institution.contact_email %><br/>
      </td>
      <td><%= link_to institution.parent.try(:full_name), edit_institution_path(institution) unless institution.parent == nil %></td>
    </tr>
  <% end %>
  </tbody>
</table>





<% if @all_institutions == "all" %>
  <div class="buttons pagination">
		<%= render_button_link t: '.view_less', href: users_path(:all_institutions => '', :anchor => 'tab2') %>
    <%= paginate @institutions %>
  </div>
<% else %>
  <div class="buttons pagination">
		<%= render_button_link t: '.view_all', href: users_path(:all_institutions => 'all', :anchor => 'tab2') %>
    <%= paginate @institutions %>
  </div>
<%end%>

<%= render_button_link t('.add_new'), new_institution_path(5) %>
