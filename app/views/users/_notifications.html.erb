<%= content_tag :p, t('.instructions') %>

<p><input type="checkbox" id="sel_all" name="select_all"><%= label_tag :sel_all, t('.sel_all') %></p>

<div>
  <p><strong><%= t('.users') %></strong></p>
	<div class="control-group">
    <%= check_box_tag 'prefs[users][role_granted]', true, @user.prefs[:users][:role_granted] %>
    <%= label_tag 'prefs[users][role_granted]', t('.role_granted'), class: 'checkbox-label' %>
	</div>
</div>

<div>
	<p><strong><%= t('.template_owners') %></strong></p>
	<div class="control-group">
    <%= check_box_tag 'prefs[dmp_owners_and_co][new_comment]', true, @user.prefs[:dmp_owners_and_co][:new_comment] %>
    <%= label_tag 'prefs[dmp_owners_and_co][new_comment]', t('.plan_new_comment'), class: 'checkbox-label' %>
    <br/>
    <%= check_box_tag 'prefs[dmp_owners_and_co][submitted]', true, @user.prefs[:dmp_owners_and_co][:submitted] %>
    <%= label_tag 'prefs[dmp_owners_and_co][submitted]', t('.plan_submitted'), class: 'checkbox-label' %>
		<br/>
    <%= check_box_tag 'prefs[dmp_owners_and_co][vis_change]', true, @user.prefs[:dmp_owners_and_co][:vis_change] %>
    <%= label_tag 'prefs[dmp_owners_and_co][vis_change]', t('.plan_vis_change'), class: 'checkbox-label' %>
    <br/>
    <%= check_box_tag 'prefs[dmp_owners_and_co][user_added]', true, @user.prefs[:dmp_owners_and_co][:user_added] %>
    <%= label_tag 'prefs[dmp_owners_and_co][user_added]', t('.plan_user_added'), class: 'checkbox-label' %>
    <br/>
    <%= check_box_tag 'prefs[dmp_owners_and_co][committed]', true, @user.prefs[:dmp_owners_and_co][:committed] %>
    <%= label_tag 'prefs[dmp_owners_and_co][committed]', t('.plan_committed'), class: 'checkbox-label' %>


	</div>
</div>

<div class="<%= user_role_in?(:template_editor, :institutional_admin) ? '': 'hidden' %>">
	<p><strong><%= t('.template_editors') %></strong></p>
	<div class="control-group">
    <%= check_box_tag 'prefs[requirement_editors][committed]', true, @user.prefs[:requirement_editors][:committed] %>
    <%= label_tag 'prefs[requirement_editors][committed]', t('.template_committed'), class: 'checkbox-label' %>
		<br/>
    <%= check_box_tag 'prefs[requirement_editors][deactived]', true, @user.prefs[:requirement_editors][:deactived] %>
    <%= label_tag 'prefs[requirement_editors][deactived]', t('.template_deactivated'), class: 'checkbox-label' %>
	</div>
</div>

<div class="<%= user_role_in?(:resource_editor, :institutional_admin) ? '': 'hidden' %>">
	<p><strong><%= t('.resource_editors') %></strong></p>
	<div class="control-group">
    <%= check_box_tag 'prefs[resource_editors][deleted]', true, @user.prefs[:resource_editors][:deleted] %>
    <%= label_tag 'prefs[resource_editors][deleted]', t('.customization_deleted'), class: 'checkbox-label' %>
		<br/>
    <%= check_box_tag 'prefs[resource_editors][associated_committed]', true, @user.prefs[:resource_editors][:associated_committed] %>
    <%= label_tag 'prefs[resource_editors][associated_committed]', t('.customization_associated_committed'), class: 'checkbox-label' %>
	</div>
</div>

<div class="<%= user_role_in?(:institutional_reviewer) ? '': 'hidden' %>">
	<p><strong><%= t('.institutional_reviewers') %></strong></p>
	<div class="control-group">
    <%= check_box_tag 'prefs[institutional_reviewers][submitted]', true, @user.prefs[:institutional_reviewers][:submitted] %>
    <%= label_tag 'prefs[institutional_reviewers][submitted]', t('.institutional_submitted'), class: 'checkbox-label' %>
		<br/>
    <%= check_box_tag 'prefs[institutional_reviewers][new_comment]', true, @user.prefs[:institutional_reviewers][:new_comment] %>
    <%= label_tag 'prefs[institutional_reviewers][new_comment]', t('.institutional_new_comment'), class: 'checkbox-label' %>
		<br/>
    <%= check_box_tag 'prefs[institutional_reviewers][approved_rejected]', true, @user.prefs[:institutional_reviewers][:approved_rejected] %>
    <%= label_tag 'prefs[institutional_reviewers][approved_rejected]', t('.institutional_approved_rejected'), class: 'checkbox-label' %>
	</div>
</div>


<script type="text/javascript">
  $('#sel_all').change(function() {
    if(this.checked) {
      $('#tab2 input[type=checkbox]').prop('checked', true);
    }else{
      $('#tab2 input[type=checkbox]').prop('checked', false);
    }
  });
</script>
