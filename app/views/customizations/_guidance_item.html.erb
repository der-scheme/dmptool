<%
   # resource local is passed in from caller
   # cust_level is the customization level 1-8
%>

<p class="cust_label" id="resource_label_<%= resource.id %>">
  <%= strip_tags(resource.label) %>
</p>

<p class="cust_text" id="resource_text_trunc_<%= resource.id %>">
  <% trunc_text = truncate(strip_tags(resource.text), length: 150, separator: ' ') %>
  <%= trunc_text %>
  <% if trunc_text != resource.text %>
    &nbsp;&nbsp;&nbsp;<%= link_to t('.show_more_link'), '#', class: 'show_full' %>
  <% end %>
</p>

<div class="cust_text_full" id="resource_text_full_<%= resource.id %>">
  <div>
    <%= raw(resource.text) %>
  </div>
  <%= link_to t('.show_less_link'), '#', class: 'show_brief' %>
</div>

