<%# this partial requires plan_id, requirement_id to be passed in as a local variable %>
<%= form_for(@response,  html: { :class => 'form-horizontal' }) do |f| %>

  <%= f.hidden_field :lock_version %>

  <%= render partial: "shared/model_errors", locals: {model: @response} %>
  <div class="control-group">
      <%= f.hidden_field :requirement_id, value: requirement_id %>
      <%= f.hidden_field :plan_id, value: plan_id %>
      <%= f.hidden_field :label_id %>
      <%= f.hidden_field :current_user_id, value: current_user.id %>
      <%= hidden_field_tag :next_requirement_id, @next_requirement_id %>
  </div>
  <% if requirement(requirement_id).requirement_type == :text %>
    <div class="control-group">
        <%= f.label :text_value, class: 'hide' %>
        <%= f.cktext_area :text_value, class: 'input-block-level', placeholder: @response.class.human_attribute_name(:text_value) %>
    </div>
  <% end %>

  <% if requirement(requirement_id).requirement_type == :numeric %>
    <div class="control-group">
      <%= f.label :numeric_value, class: 'control-label' %>
      <div class="controls">
        <%= f.number_field :numeric_value %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :label_id, class: 'control-label' %>
      <div class="controls">
        <%= f.select(:label_id, requirement(requirement_id).labels.collect {|l| [ l.desc, l.id ] }) %>
      </div>
    </div>
  <% end %>

  <% if requirement(requirement_id).requirement_type == :date %>
    <div class="control-group">
      <%= f.label :date_value, class: 'control-label' %>
      <div class="controls">
        <%= f.date_field :date_value, value: @response.date_value.try(:strftime, '%F'), class: 'datepicker', id:'response_date_value' %>
      </div>
    </div>
  <% end %>

  <% if requirement(requirement_id).requirement_type == :enum %>
    <div class="control-group">
      <%= f.label :enumeration_id, class: 'control-label', style: 'margin-left: 10px; width: auto' %>
      <div class="controls" style="margin-left: 100px">
        <%= f.select :enumeration_id,
                     requirement(requirement_id).enumerations.map {|e| [e.value, e.id]},
                     prompt: @response.class.human_attribute_name(:enumeration_id) %>
      </div>
    </div>
  <% end %>

  <br/>
  <div class="actions">
    <% if requirement(requirement_id).obligation == :mandatory %>
      <%= f.submit t('.save_and_next_button'), name: 'save_and_next', class: 'btn btn-success pull-right', id: 'save_and_next' %>
      <%= f.submit t('.save_button'), name: 'save_only', class: 'btn btn-success pull-right', id: 'save_only' %>
      <%= link_to t('.back_button'), details_plan_path(@plan), class: 'btn' %>
    <% else %>
      <%= f.submit t('.save_and_next_button'), name: 'save_and_next', class: 'btn btn-success pull-right'  %>
      <%= f.submit t('.save_button'), name: 'save_only', class: 'btn btn-success pull-right' %>
      <%= link_to t('.back_button'), details_plan_path(@plan), class: 'btn', role: 'button' %>
    <% end %>
  </div>
<% end %>

<%= content_tag :div, t('.alert_message'), id: 'alert_message',
                title: '.alert_message_tooltip' %>
